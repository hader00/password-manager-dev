{
  "name": "simple-password-manager-app",
  "productName": "Simple Password Manager",
  "version": "1.0.3",
  "private": true,
  "author": "Martin Haderka <xhader00@stud.fit.vutbr.cz>",
  "description": "Simple cloud and local based Password Manager.",
  "license": "MIT",
  "main": "./public/electron.js",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "https://github.com/hader00/password-manager-dev"
  },
  "build": {
    "appId": "cz.martin.haderka.simple-password-manager-app",
    "files": [
      "build/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "darkModeSupport": false,
      "target": [
        "dmg"
      ],
      "publish": [
        "github"
      ]
    },
    "dmg": {
      "background": null,
      "backgroundColor": "#ffffff",
      "window": {
        "width": "400",
        "height": "400"
      },
      "contents": [
        {
          "x": 100,
          "y": 100
        },
        {
          "x": 200,
          "y": 100,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "synopsis": "Simple Password Manager.",
      "desktop": {
        "Name": "Simple Password Manager",
        "Type": "Application",
        "GenericName": "Password Manager"
      },
      "target": [
        "deb",
        "freebsd",
        "rpm",
        "AppImage",
        "snap"
      ],
      "publish": [
        "github"
      ]
    },
    "win": {
      "publisherName": "Martin Haderka",
      "publish": [
        "github"
      ]
    }
  },
  "dependencies": {
    "@material-ui/core": "^4.12.4",
    "@material-ui/icons": "^4.11.3",
    "@material-ui/lab": "^4.0.0-alpha.61",
    "@vscode/sqlite3": "^5.0.8",
    "axios": "^0.26.1",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.0.1",
    "electron-window-state": "^5.0.3",
    "js-crypto-hkdf": "^1.0.4",
    "validator": "^13.7.0",
    "ws": "^8.5.0"
  },
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "rm -fr ./build/* && react-scripts build && cp -R ./icons/* ./build",
    "eject": "react-scripts eject",
    "pack-all": "rm -fr ./dist/* && yarn build && yarn pack-win && yarn pack-linux && yarn pack-mac && yarn pack-macARM",
    "pack-win": "electron-builder --win -p never",
    "pack-linux": "electron-builder --linux --x64 -p never",
    "pack-mac": "electron-builder --mac -p never",
    "pack-macARM": "electron-builder --mac --arm64 -p never",
    "dist": "rm -fr ./dist/* && yarn build && yarn dist-win && yarn dist-linux && yarn dist-mac && yarn dist-macARM",
    "dist-win": "electron-builder --win -p 'onTagOrDraft'",
    "dist-linux": "electron-builder --linux --x64 -p 'onTagOrDraft'",
    "dist-mac": "electron-builder --mac -p 'onTagOrDraft'",
    "dist-macARM": "electron-builder --mac --arm64 -p 'onTagOrDraft'",
    "rebuild-electron": "electron-builder install-app-deps",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "electron": "^18.0.4",
    "electron-builder": "^23.0.3",
    "node-gyp": "^9.0.0",
    "prop-types": "^15.8.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-scripts": "^5.0.1",
    "wait-on": "^6.0.1",
    "eslint-config-react-app": "^7.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
